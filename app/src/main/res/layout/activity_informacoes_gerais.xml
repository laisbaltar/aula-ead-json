<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/secondary"
    tools:context=".InformacoesGeraisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/primary"
            android:layout_margin="20dp"
            android:elevation="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewMediaGeral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/textColor"
                android:padding="8dp"
                android:text="Média geral da turma: " />

            <TextView
                android:id="@+id/textViewMaiorNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/textColor"
                android:padding="8dp"
                android:text="Aluno com a maior nota: " />

            <TextView
                android:id="@+id/textViewMenorNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/textColor"
                android:padding="8dp"
                android:text="Aluno com a menor nota: " />

            <TextView
                android:id="@+id/textViewIdadeMedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:textColor="@color/textColor"
                android:padding="8dp"
                android:text="Idade média da turma: " />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Alunos Aprovados"
            android:textColor="@color/textColor"
            android:textSize="30sp"
            android:background="@color/primary"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/list_alunos_aprovados"
            android:layout_margin="25dp"
            android:background="@color/secondary"
            android:elevation="6dp"
            android:divider="@color/primary"
            android:dividerHeight="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Alunos Reprovados"
            android:textColor="@color/textColor"
            android:textSize="30sp"
            android:background="@color/primary"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/list_alunos_reprovados"
            android:layout_margin="25dp"
            android:background="@color/secondary"
            android:elevation="6dp"
            android:divider="@color/primary"
            android:dividerHeight="2dp" />
    </LinearLayout>
</LinearLayout>