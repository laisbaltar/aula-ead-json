<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondary"
    tools:context=".DadosEstudanteActivity">

    <TextView
        android:id="@+id/textViewNomeEstudante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Nome Estudante"
        android:textColor="@color/textColor"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        app:lottie_rawRes="@raw/animacao_estudante"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/primary"
        android:layout_margin="20dp"
        android:elevation="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewIdade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/textColor"
            android:padding="8dp"
            android:text="Idade do estudante: " />

        <TextView
            android:id="@+id/textViewMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/textColor"
            android:padding="8dp"
            android:text="Nota final (média das notas): " />

        <TextView
            android:id="@+id/textViewFrequencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/textColor"
            android:padding="8dp"
            android:text="Percentual de presença: " />

        <TextView
            android:id="@+id/textViewSituacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/textColor"
            android:padding="8dp"
            android:text="Situação final (aprovado ou reprovado): " />
    </LinearLayout>

</LinearLayout>